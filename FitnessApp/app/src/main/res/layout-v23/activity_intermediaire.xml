<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewInter"
        android:layout_width="180dp"
        android:layout_height="240dp"

        android:layout_centerHorizontal="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="35dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWorkoutList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@color/colorPrimaryDark"
                android:scaleType="centerCrop"
                android:src="@drawable/cardio" />

            <TextView
                android:id="@+id/tvWorkoutList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/azur"
                android:gravity="center"
                android:text="Cardio/Fitness"
                android:textSize="13sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewInter2"
        android:layout_width="180dp"
        android:layout_height="240dp"

        android:layout_below="@id/cardViewInter"
        android:layout_centerHorizontal="true"

        android:layout_marginRight="8dp"
        android:layout_marginTop="35dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWorkoutList2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@color/colorPrimaryDark"
                android:scaleType="centerCrop"
                android:src="@drawable/musculation" />

            <TextView
                android:id="@+id/tvWorkoutList2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/azur"
                android:gravity="center"
                android:text="Musculation"
                android:textSize="13sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>